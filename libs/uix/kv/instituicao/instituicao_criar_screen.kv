<InstituicaoScreen>
    name: 'instituicao'
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title:"Instituição"
            id:toolbar
            right_action_items:[["dots-vertical", lambda x: root.abrir()]]

            MDFloatLayout:
                adaptive: True
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite a Razão Social"
                    pos_hint: {'center_x': 0.3, 'center_y':0.9}
                    id: razao_social
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o nome fantasiaf"
                    pos_hint: {'center_x': 0.3, 'center_y':0.8}
                    id: nome_fantasia
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o CIE"
                    pos_hint: {'center_x': 0.3, 'center_y':0.7}
                    id: cie
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o CNPJ"
                    pos_hint: {'center_x': 0.3, 'center_y':0.6}
                    id: cnpj
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Tipo de instituição"
                    pos_hint: {'center_x': 0.3, 'center_y':0.5}
                    id: tipo_instituicao
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite um telefone"
                    pos_hint: {'center_x': 0.3, 'center_y':0.4}
                    id: fone_i
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite um telefone"
                    pos_hint: {'center_x': 0.3, 'center_y':0.3}
                    id: fone_ii
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o email"
                    pos_hint: {'center_x': 0.3, 'center_y':0.2}
                    id: email
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o contato"
                    pos_hint: {'center_x': 0.3, 'center_y':0.1}
                    id: contato
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o fone contato I"
                    pos_hint: {'center_x': 0.3, 'center_y':0.0}
                    id: fone_contato_i
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o fone contato II"
                    pos_hint: {'center_x': 0.3, 'center_y':-1}
                    id: fone_contato_ii
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite o logradouro"
                    pos_hint: {'center_x': 0.3, 'center_y':-2}
                    id: logradouro
                MDTextField:
                    size_hint_x: 0.5
                    hint_text: "Digite uma observação"
                    pos_hint: {'center_x': 0.3, 'center_y':-3}
                    id: observacao

                MDRaisedButton:
                    text: 'criar instituicao'
                    pos_hint: {'center_x': 0.3, 'center_y': .1}
                    on_release:
                        if root.inserir_dados() == True: app.root.current = 'instituicao'