<HomeScreen>

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Admin Funeraria"
            right_action_items: [["dots-vertical", lambda x: x]]

        MDFloatLayout:
            MDRaisedButton:
                pos_hint: {'center_y': 0.8, 'center_x': .5}
                size_hint_x: 0.5
                text: "Cidadã(o)"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'cidadao'

            MDRoundFlatButton:
                pos_hint: {'center_y': 0.65, 'center_x': .5}
                size_hint_x: 0.5
                text: "Estatística"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'estatistica'

            MDRoundFlatButton:
                pos_hint: {'center_y': 0.5, 'center_x': .5}
                size_hint_x: 0.5
                text: "Instituição"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'instituicao'

            MDRaisedButton:
                pos_hint: {'center_y': 0.35, 'center_x': .5}
                size_hint_x: 0.5
                text: "Jazigo"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'jazigo'

            MDRoundFlatButton:
                pos_hint: {'center_y': 0.2, 'center_x': .5}
                size_hint_x: 0.5
                text: "Logradouro"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'logradouro'

            MDRoundFlatButton:
                pos_hint: {'center_y': 0.05, 'center_x': .5}
                size_hint_x: 0.5
                text: "Setor"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'setor'          

            MDRaisedButton:
                pos_hint: {'center_y': 0.01, 'center_x': .5}
                size_hint_x: 0.5
                text: "Usuário"
                md_bg_color: 0, 0, 0, 0
                on_release: app.root.current = 'usuario'

        AnchorLayout:
            anchor_x: "right"
            anchor_y: "bottom"
            padding: dp(20)

            MDFloatingActionButton:
                on_release: app.root.current='login'
                icon: "plus"
                
